# Stage 1: Build the frontend
FROM node:20-alpine AS frontend-builder

WORKDIR /frontend

# Copy frontend package files
COPY frontend/package*.json ./

# Install dependencies
RUN npm ci

# Copy frontend source
COPY frontend ./

# Build the frontend
RUN npm run build

# Stage 2: Build the Rust backend
FROM rust:1.92 AS backend-builder

WORKDIR /app

# Copy Cargo files
COPY backend/Cargo.toml backend/Cargo.lock ./

# Create a dummy main.rs to cache dependencies
RUN mkdir src && \
    echo "fn main() {}" > src/main.rs && \
    cargo build --release && \
    rm -rf src target/release/quittance* target/release/deps/quittance*

# Copy backend source code
COPY backend/src ./src
COPY backend/migrations ./migrations

# Build without compile-time query verification (SQLx offline mode)
ENV SQLX_OFFLINE=true
RUN touch src/main.rs && cargo build --release

# Stage 3: Create the runtime image
FROM debian:bookworm-slim

WORKDIR /app

# Install runtime dependencies including debugging tools
RUN apt-get update && \
    apt-get install -y ca-certificates libssl3 libpq5 strace && \
    rm -rf /var/lib/apt/lists/*

# Copy the binary from backend builder
COPY --from=backend-builder /app/target/release/quittance /app/quittance

# Copy migrations
COPY --from=backend-builder /app/migrations /app/migrations

# Copy built frontend from frontend builder
COPY --from=frontend-builder /frontend/dist /app/frontend/dist

# Verify binary exists and is executable
RUN ls -lah /app/quittance && chmod +x /app/quittance

# Create a startup script to debug issues
RUN echo '#!/bin/sh\n\
echo "=== Starting Quittance Application ==="\n\
echo "Binary info:"\n\
ls -lah /app/quittance\n\
echo ""\n\
echo "Checking binary dependencies:"\n\
ldd /app/quittance || echo "ldd failed"\n\
echo ""\n\
echo "Environment variables:"\n\
env | grep -E "(DATABASE_URL|JWT_SECRET|RUST_LOG|FRONTEND_PATH)" || echo "No relevant env vars"\n\
echo ""\n\
echo "Attempting to run binary with strace..."\n\
strace -e trace=execve,open,openat,connect,socket /app/quittance 2>&1 | head -100\n\
EXIT_CODE=$?\n\
echo "Binary exited with code: $EXIT_CODE"\n\
if [ $EXIT_CODE -ne 0 ]; then\n\
  echo "Application failed to start"\n\
  sleep 300\n\
fi\n\
' > /app/start.sh && chmod +x /app/start.sh

# Set environment variables
ENV FRONTEND_PATH=/app/frontend/dist
ENV RUST_LOG=info
ENV RUST_BACKTRACE=1

# Expose port
EXPOSE 8080

# Run the startup script
CMD ["/app/start.sh"]
